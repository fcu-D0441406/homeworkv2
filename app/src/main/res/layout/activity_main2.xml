<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.n.myapplication.Main2Activity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.n.myapplication.BlankFragment"
        tools:layout="@layout/fragment_blank"
        android:id="@+id/frag"
        android:layout_below="@+id/double_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <fragment
        android:layout_width="match_parent"
        android:id="@+id/fragment"
        android:name="com.example.n.myapplication.BlankFragment2"
        tools:layout="@layout/fragment_blank_fragment2"
        android:layout_height="330dp"
        android:layout_below="@+id/frag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/double_time"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/double_times" />

    <Button
        android:id="@+id/hidden"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/double_time"
        android:layout_toEndOf="@+id/double_time"
        android:layout_toRightOf="@+id/double_time"
        android:background="@drawable/hidden" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recip_text"
        android:background="@drawable/three"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/point"
        android:layout_alignBottom="@+id/hidden"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不想玩了"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
