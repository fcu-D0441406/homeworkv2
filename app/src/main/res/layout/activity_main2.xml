<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.n.myapplication.Main2Activity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.n.myapplication.BlankFragment"
        tools:layout="@layout/fragment_blank"
        android:layout_marginTop="99dp"
        android:id="@+id/frag"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="match_parent"
        android:id="@+id/fragment"
        android:name="com.example.n.myapplication.BlankFragment2"
        tools:layout="@layout/fragment_blank_fragment2"
        android:layout_height="330dp"
        android:layout_below="@+id/frag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/double_time"
        android:background="@drawable/double_times"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <Button
        android:layout_alignBottom="@+id/double_time"
        android:layout_toRightOf="@+id/double_time"
        android:layout_toEndOf="@+id/double_time"
        android:id="@+id/hidden"
        android:background="@drawable/hidden"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:id="@+id/recip_text"
        android:layout_alignBaseline="@+id/hidden"
        android:layout_alignBottom="@+id/hidden"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/three"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hidden"
        android:layout_alignLeft="@+id/recip_text"
        android:layout_alignStart="@+id/recip_text"
        android:id="@+id/point" />

</RelativeLayout>
